<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="villanova.freespace"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/LoginTheme" >
        </activity>
        <activity
            android:name=".LoginSignupActivity"
            android:theme="@style/LoginTheme" >
        </activity>
        <activity android:name=".LookingRoomActivity" >
        </activity>
        <activity android:name=".GroupDashboardActivity" >
        </activity>
        <activity
            android:name=".AvailableRoomsActivity"
            android:label="listview_available_rooms"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".FindRoomsActivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".PickRoomActivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".CurrentReservationsActivity"
            android:theme="@style/AppTheme" >
        </activity>

    </application>

</manifest>